<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hei_sir.link">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name="org.litepal.LitePalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <provider
            android:authorities="com.example.hei_sir.link.fileprovider"
            android:name="android.support.v4.content.FileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths"></meta-data>
        </provider>
        <activity android:name=".EnterActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity" />
        <activity
            android:name=".MainActivity"
            android:label="主页" />
        <activity
            android:name=".Main2Activity"
            android:label="班级空间" />
        <activity
            android:name=".Main3Activity"
            android:label="个人信息" />
        <activity
            android:name=".FormActivity"
            android:label="课程表">
            <intent-filter>
                <action android:name="com.example.hei_sir.link.FORM" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.MY_FORM" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FromAddActivity"
            android:label="@string/title_activity_from_add" />
        <activity android:name=".ReportActivity">
            <intent-filter>
                <action android:name="com.example.hei_sir.link.REPORT" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.MY_REPORT" />
            </intent-filter>
        </activity>
        <activity android:name=".HomeWorkActivity">
            <intent-filter>
                <action android:name="com.example.hei_sir.link.HOMEWORK" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.MY_HOMEWORK" />
            </intent-filter>
        </activity>
        <activity android:name=".QaActivity" />
        <activity android:name=".Qa2tActivity" />
        <activity android:name=".Qa1sActivity" />
        <activity android:name=".Qa2sActivity" />
        <activity android:name=".ZoneActivity"></activity>
    </application>

</manifest>