<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hei_sir.link">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEM" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS"/>

    <application
        android:name="org.litepal.LitePalApplication"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.example.hei_sir.link.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity android:name=".EnterActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity" />
        <activity
            android:name=".MainActivity"
            android:label="主页"
            android:theme="@style/ExamActivityTheme" />
        <activity
            android:name=".Main2Activity"
            android:label="班级空间"
            android:theme="@style/ExamActivityTheme" />
        <activity
            android:name=".Main3Activity"
            android:label="个人信息"
            android:theme="@style/ExamActivityTheme" />
        <activity
            android:name=".FormActivity"
            android:label="课程表"
            android:theme="@style/ExamActivityTheme">
            <intent-filter>
                <action android:name="com.example.hei_sir.link.FORM" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.MY_FORM" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FromAddActivity"
            android:label="@string/title_activity_from_add" />
        <activity android:name=".QaActivity" />
        <activity android:name=".Qa2tActivity" />
        <activity android:name=".Qa1sActivity" />
        <activity android:name=".Qa2sActivity" />
        <activity
            android:name=".ZoneActivity"
            android:label="fa" />
        <activity
            android:name=".ForgetPasswordActivity"
            android:label="@string/title_activity_forget_password" />
        <activity
            android:name=".ForgetPassword1Activity"
            android:label="@string/title_activity_forget_password1" />
        <activity
            android:name=".ForgetPassword2Activity"
            android:label="@string/title_activity_forget_password2" />
        <activity android:name=".ForgetPassword3Activity" />
        <activity
            android:name=".Exam2Activity"
            android:theme="@style/ExamActivityTheme" />
        <activity
            android:name=".Exam1Activity"
            android:label="个人成绩" />
        <activity
            android:name=".Exam1tActivity"
            android:label="班级成绩" />
        <activity
            android:name=".Exam2tActivity"
            android:theme="@style/ExamActivityTheme" />
        <activity android:name=".ContacttActivity" />
        <activity android:name=".Contact2Activity"
            android:theme="@style/ExamActivityTheme"/>
        <activity android:name=".ExamAddActivity"></activity>
    </application>

</manifest>